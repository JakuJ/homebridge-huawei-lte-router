{
  "pluginAlias": "Huawei LTE Router",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Huawei LTE Router"
      },
      "address": {
        "title": "Router IP",
        "type": "string",
        "required": true,
        "default": "192.168.8.1"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "admin"
      },
      "model": {
        "title": "Model",
        "type": "string",
        "required": false,
        "default": "LTE Router"
      },
      "serialNumber": {
        "title": "Serial Number",
        "type": "string",
        "required": false,
        "default": "Unknown"
      },
      "devices": {
        "type": "array",
        "items": {
          "title": "Devices",
          "type": "object",
          "properties": {
            "hostname": {
              "title": "Hostname",
              "type": "string",
              "required": true
            },
            "mac": {
              "title": "MAC address",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}